head
  css:
    body {
      font-family: HelveticaNeue-Light, Helvetica Neue, Helvetica, sans-serif;
    }

    div {
      border: 85px solid black;
      font-size: 5.2em;
      height: 2220px;
      margin: 25px;
      padding-top: 110px;
      text-align: center;
      vertical-align: middle;
      width: 3070px;
    }

    h2, h3 {
      font-weight: 400;
    }

    p {
      margin-top: 75px;
    }

body
  div
    p This document certifies that
    h2 #{@name}
    p has completed the
    h2 Academic Integrity Course
    p on
    h3 #{(@timestamp || Time.now).strftime("%B %e, %Y")}
    img [src = 'logo.png']
